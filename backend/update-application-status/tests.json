{
  "tests": [
    {
      "name": "Update application status",
      "method": "PUT",
      "path": "/",
      "body": {
        "application_id": 1,
        "status": "in_progress"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid status",
      "method": "PUT",
      "path": "/",
      "body": {
        "application_id": 1,
        "status": "invalid"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
